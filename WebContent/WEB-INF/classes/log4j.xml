<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- 
		local	: D:/Projects/sanghafarm/WebContent
		dev 	: /home/sangha/ROOT
		real 	: /home/httpd/html
	 -->
	<appender name="ConsoleAppeder" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<!--<param name="ConversionPattern" value="[%d{HH:mm:ss.SSS}::%p] %C.%M() - %m%n" />-->
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}::%p] %m%n" />
		</layout>
	</appender>

	<appender name="RMSApiAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/Projects/sanghafarm/WebContent/WEB-INF/logs/rms_api.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}:%M:%p] %m%n" />
		</layout>
	</appender>

	<appender name="KakaopayUtilAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/Projects/sanghafarm/WebContent/WEB-INF/logs/kakaopay.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}:%M:%p] %m%n" />
		</layout>
	</appender>

	<appender name="NaverPayUtilAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/Projects/sanghafarm/WebContent/WEB-INF/logs/naverpay.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}:%M:%p] %m%n" />
		</layout>
	</appender>

	<logger name="org.apache">
		<level value="INFO" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>
	
	<logger name="com.efusioni">
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="com.ibatis">
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="stone.sql.query">
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="stone.sql.result">
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="com.sanghafarm.service.hotel.RMSApiService">
		<level value="DEBUG" />
		<appender-ref ref="RMSApiAppender" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="com.sanghafarm.utils.KakaopayUtil">
		<level value="DEBUG" />
		<appender-ref ref="KakaopayUtilAppender" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="com.sanghafarm.utils.NaverPayUtil">
		<level value="DEBUG" />
		<appender-ref ref="NaverPayUtilAppender" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<!--
	<logger name="java.sql.Connection">
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="java.sql.Statement">
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="java.sql.PreparedStatement">
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>

	<logger name="java.sql.ResultSet">
		<level value="DEBUG" />
		<appender-ref ref="ConsoleAppeder" />
	</logger>
	//-->

</log4j:configuration>